<div class="row">
  <div class="col-md-4">
    <h1>Posts</h1>
    <ul class="list-unstyled">
      {{#each model as |post|}}
        <li>
          {{#link-to 'post' post}}{{post.title}}{{/link-to}}
          <span class="muted">
            by {{post.author.name}}
          </span>
        </li>
      {{/each}}
    </ul>
  </div>
  <div class="col-md-8">
    {{outlet}}
  </div>
</div>
